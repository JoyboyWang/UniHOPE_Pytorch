{
    "base": {
        "exp_name": "hflnet.ho3d.h-ho_train",
        "model_dir": "experiment/hflnet.ho3d.h-ho_train"
    },
    "data": {
        "name": "HO3D_HOPE",
        "transforms_type": "hflnet",
        "eval_type": [
            "val"
        ],
        "input_img_shape": [
            256,
            256
        ],
        "root_dir": "data/HO3D_v2",
        "load_nori": false,
        "bbox_hand_normalize_2d_joint": true
    },
    "model": {
        "name": "hflnet"
    },
    "loss": {
        "name": "hflnet",
        "weight": {
            
        }
    },
    "metric": {
        "major_metric": "score",
        "obj_eval_mode": "gt"
    },
    "train": {
        "num_epochs": 70,
        "batch_size": 64,
        "num_workers": 16
    },
    "test": {
        "batch_size": 64,
        "num_workers": 16
    },
    "summary": {
       "save_summary_steps": 50,
        "save_mid_freq": 20,
        "save_latest_freq": 1,
        "save_best_after": 0
    },
    "optimizer": {
        "name": "adam",
        "lr": 1e-4
    },
    "scheduler": {
        "name": "step",
        "milestones": [
            10,
            20,
            30,
            40,
            50,
            60,
            70
        ],
        "gamma": 0.7
    }
}
