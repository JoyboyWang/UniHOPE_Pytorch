{
    "base": {
        "exp_name": "mobrecon.ho3d.h-ho_train",
        "model_dir": "experiment/mobrecon.ho3d.h-ho_train"
    },
    "data": {
        "name": "HO3D_HOPE",
        "transforms_type": "mobrecon",
        "eval_type": [
            "val"
        ],
        "input_img_shape": [
            128,
            128
        ],
        "root_dir": "data/HO3D_v2",
        "load_nori": false,
        "bbox_hand_normalize_2d_joint": false
    },
    "model": {
        "name": "mobrecon",
        "pretrain": true
    },
    "loss": {
        "name": "mobrecon"
    },
    "metric": {
        "major_metric": "score"
    },
    "train": {
        "num_epochs": 38,
        "batch_size": 32,
        "num_workers": 16
    },
    "test": {
        "batch_size": 64,
        "num_workers": 16
    },
    "summary": {
       "save_summary_steps": 50,
        "save_mid_freq": 10,
        "save_latest_freq": 1,
        "save_best_after": 0
    },
    "optimizer": {
        "name": "adam",
        "lr": 1e-3
    },
    "scheduler": {
        "name": "step",
        "milestones": [
            30
        ],
        "gamma": 0.1
    }
}
