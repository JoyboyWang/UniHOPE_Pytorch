{
    "base": {
        "exp_name": "unihope.dexycb_s1",
        "model_dir": "experiment/unihope.dexycb_s1"
    },
    "data": {
        "name": "DEX_YCB_HOPE",
        "transforms_type": "hflnet",
        "eval_type": [
            "test"
        ],
        "input_img_shape": [
            128,
            128
        ],
        "root_dir": "data/DexYCB",
        "load_nori": false,
        "contrastive": true,
        "use_data_aug_h": true,
        "use_data_aug_ho": true,
        "use_data_aug_h_gen": true,
        "pair_same_data_aug": true,
        "filter_rule": "occ",
        "occ_threshold": 0.9,
        "gen_version": 1,
        "data_split": "s1"
    },
    "model": {
        "name": "unihope_net"
    },
    "loss": {
        "name": "hflnet_grasping_objconf",
        "weight": {
            "c3_h": 0.1,
            "x_hand": 0.1,
            "mano_encoding": 0.5
        }
    },
    "metric": {
        "major_metric": "score",
        "obj_eval_mode": "gt"
    },
    "train": {
        "num_epochs": 50,
        "batch_size": 40,
        "num_workers": 16,
        "init_layer_weight": true
    },
    "test": {
        "batch_size": 40,
        "num_workers": 16
    },
    "summary": {
        "save_summary_steps": 50,
        "save_mid_freq": 10,
        "save_latest_freq": 1,
        "save_best_after": 0
    },
    "optimizer": {
        "name": "adam",
        "lr": 1.18e-05
    },
    "scheduler": {
        "name": "step",
        "milestones": [
            10,
            20,
            30,
            40,
            50
        ],
        "gamma": 0.7
    }
}