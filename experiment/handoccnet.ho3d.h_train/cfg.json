{
    "base": {
        "exp_name": "handoccnet.ho3d.h_train",
        "model_dir": "experiment/handoccnet.ho3d.h_train"
    },
    "data": {
        "name": "HO3D_HOPE",
        "transforms_type": "hand_occ_net",
        "eval_type": [
            "val"
        ],
        "input_img_shape": [
            256,
            256
        ],
        "root_dir": "data/HO3D_v2",
        "load_nori": false,
        "bbox_hand_normalize_2d_joint": false
    },
    "model": {
        "name": "hand_occ_net",
        "pretrain": true
    },
    "loss": {
        "name": "hand_occ_net",
        "lambda_mano_verts": 1e4,
        "lambda_mano_joints": 1e4,
        "lambda_mano_pose": 10,
        "lambda_mano_shape": 0.1,
        "lambda_joints_img": 100
    },
    "metric": {
        "major_metric": "score"
    },
    "train": {
        "num_epochs": 70,
        "batch_size": 64,
        "num_workers": 16
    },
    "test": {
        "batch_size": 64,
        "num_workers": 16
    },
    "summary": {
        "save_summary_steps": 50,
        "save_mid_freq": 10,
        "save_latest_freq": 1,
        "save_best_after": 0
    },
    "optimizer": {
        "name": "adam",
        "lr": 1e-4
    },
    "scheduler": {
        "name": "step",
        "milestones": [
            10, 20, 30, 40, 50, 60, 70
        ],
        "gamma": 0.7
    }
}
